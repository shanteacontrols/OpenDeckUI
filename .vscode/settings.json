{
  "editor.autoIndent": "advanced",
  "editor.tabSize": 2,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "never"
  },
  // VETUR - disable
  "vetur.validation.template": false,
  "vetur.completion.autoImport": false,
  // TYPESCRIPT
  "typescript.tsdk": "node_modules/typescript/lib", //  Use the project's ts version
  "typescript.format.enable": false,
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  // PRETTIER
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "formattingToggle.affects": ["formatOnPaste", "formatOnSave", "formatOnType"],
  // ESLINT
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["vue", "typescript", "javascript"],
  "eslint.packageManager": "yarn",
  "files.associations": {
    "*.css": "postcss"
  },
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [true, {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  }
}
